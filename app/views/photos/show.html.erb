<h2><%=	 @photo.name %></h2>
  <%=	 link_to 'Edit Photo' , action: 'change', controller: 'photos', :id => @photo.id %>  <%=	 link_to 'Delete Photo' , photo_path(@photo), :method => 'delete' %>

<%= image_tag @photo.image(:orig).to_s %>

<div class='span4'>
 <p><b><%=	 link_to @photo.user.full_name, :controller => 'users', :action => 'show', :username => @photo.user.username %></b>
   <%= @photo.description %>

  <div id="comments-box">
  
    <h2>Comments</h2>
   <%	 post.comments.each do |comment| %>
        <% if post.comments.first == comment %>
            <div class="comment-first">
        <%	 else %>
            <div class="comment">

        <% end %>
        <%=	link_to comment.commentable.user.full_name, :controller => 'users', :action => 'show', :username => comment.commentable.user.username %> <%=	 comment.content %>
        </div>
        <%	 end %>

    <p>
   <% if current_user %>
          <%=	 render 'comments/form' %>
 <% else %>
 <%=	link_to 'Log in', login_path  %> or   <%=	link_to 'Register', register_path  %>  to add a comment
 <% end %>
 </p>
  </div>



</div>