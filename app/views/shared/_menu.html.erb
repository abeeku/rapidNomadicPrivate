<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
	<a class="brand" href="<%=	 root_url %>"><%=	 image_tag 'logo_opt.gif', :mouseover => 'logohover_opt.png', :width => '50px', :height => '40px' %><%=	 image_tag 'Untitled-2letters_opt.png', height: '40px' %></a>

    <%=	 form_tag posts_path, method: :get, :style => "display:inline;", :class => 'navbar-form pull-left', :id => 'post_search_form' do %>
        <%=	 text_field_tag :search, params[:search], style: 'background-color:transparent;color: white;border:none;', :placeholder => 'Search...' %>
        <a href="#" onclick="
       _('post_search_form').submit();
                return false;
        ">
          <i class="icon-search icon-white icon-large" style="color: #ffffff;line-height: normal;"></i>
        </a>
        <%=	 submit_tag "", name: nil, :style => "background-color:transparent;border:none;padding:10px;margin:0;", class: 'icon-search icon-white' %>

    <%	end %>
	<ul class="nav">
	  <li>
		<%= link_to 'World Wall', :controller => 'pages', :action => 'world_wall' %>
	  </li>
	  <li><a href="#">Dashboard</a></li>
	  <li><a href="#">ComeToChat</a></li>
	  <li>
		<%= link_to "Games", :controller => 'games', :action => 'index' %>
	  </li>
	</ul>

	<ul class="nav pull-right">
	  <% if current_user %>

		  <li class="dropdown"><a href="#" id="menubar_drop" role="button" class="dropdown-toggle" data-toggle="dropdown"><%=  image_tag current_user.avatar_url(:menubar).to_s %> <%=  "#{current_user.full_name}" %><strong style="color: white" class="caret"></strong></a>

			<ul class="dropdown-menu" role='menu'>
			  <li role="presentation"><%=	 link_to 'View My Profile', profile_for(current_user) %></li>

			  <li><%= link_to "Messages", messages_url %></li>
			</ul>

		  </li>
		  <li class="divider-vertical"></li>
		  <li><%=	 link_to 'Log Out', logout_path %></li>
	  <% else %>
		  <li><%=	 link_to 'Register', register_path %></li>
		  <li class="divider-vertical"></li>
		  <li class="dropdown">
			<a  href="#" id="drop2" role="button" class="dropdown-toggle" data-toggle="dropdown">Log In <b class="caret"></b></a>
			<div class="dropdown-menu" style="padding: 15px; padding-bottom: 0px;">
			  <%=	 render 'sessions/form' %>
			   <%= link_to 'Forgotten Password?', new_password_reset_path %>
			</div>
		  </li>
	  <% end %>
	</ul>
  </div>
</div>